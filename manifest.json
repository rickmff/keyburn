{
    "manifest_version": 3,
    "name": "Text to Typing Game",
    "version": "1.3",
    "description": "Transform any text into a typing speed minigame",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}